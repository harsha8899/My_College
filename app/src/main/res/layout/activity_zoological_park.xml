<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Zoological_park">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/zoo"
        android:scaleType="fitCenter"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="@string/content_sri_venkateswara_zoological_park_has_been_established_on_modern_concepts_of_zoo_the_park_is_named_after_the_lord_venkateswara_of_seven_hills_in_tirupati_and_the_zoo_contains_so_many_animals_and_saperately_it_contain_lion_safari"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/directions"
        android:onClick="Zoological_park_Directions"/>
    </LinearLayout>

</LinearLayout>